script = <<-SHELL
    sudo curl -s https://pastebin.com/raw/BB6Lhek1 > /tmp/token
    sudo su
    apk add curl
    export K3S_TOKEN_FILE=/tmp/token
    export K3S_URL=https://10.12.99.1:6443
    curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE=644 sh -s - --flannel-iface=eth1
    echo "Sleeping for 5 seconds to wait for k3s to start"
    sleep 5
    SHELL

Vagrant.configure("2") do |config|
  config.vm.box = "centos/8"
  config.vm.hostname = "GitlabNode"
  config.vm.network "public_network", bridge: "en0: Ethernet"
  config.vm.provider "virtualbox" do |vb|
          vb.name = "GitlabNode"
          vb.gui = false
          vb.cpus = 4
          vb.customize ['modifyvm', :id, '--audio', 'none']
          vb.memory = "4096"
  end
  config.vm.provision "shell", inline: script
end