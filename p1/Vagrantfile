# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.

server_ip = "192.168.42.110"
client1_ip = "192.168.42.111"
__server = "babdelkaS"
__client1 = "babdelkaSW"

server_script = <<-SHELL
    sudo su
    sudo yum install httpd -y
    sudo systemctl start httpd
    apk add curl
    curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE=644 sh -s - --flannel-iface=eth1
    echo "Sleeping for 5 seconds to wait for k3s to start"
    sleep 5
    sudo chmod 644 /etc/rancher/k3s/k3s.yaml
    sudo cat /var/lib/rancher/k3s/server/token > /var/www/html/index.html
    SHELL

client_script = <<-SHELL
    sudo su
    apk add curl
    sudo curl -s 192.168.42.110 > /tmp/token
    sudo chmod 644 /tmp/token
    export K3S_TOKEN_FILE=/tmp/token
    export K3S_URL=https://192.168.42.110:6443
    export K3S_NODE_NAME=babdelkaSW
    curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE=644 sh -s - --flannel-iface=eth1
    echo "Sleeping for 5 seconds to wait for k3s to start"
    sleep 5
    SHELL

Vagrant.configure("2") do |config|

    config.vm.define __server do |server|
        server.vm.box = "centos/8"
        server.vm.hostname = __server
        server.vm.network :private_network, ip: server_ip
        server.vm.provider "virtualbox" do |vb|
            vb.name = __server
            vb.gui = false
            vb.cpus = 1
            vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
            vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
            vb.customize ['modifyvm', :id, '--audio', 'none']
            vb.memory = "512"
        end
		server.vm.provision "shell", inline: server_script
    end

    config.vm.define __client1 do |client|
        client.vm.box = "centos/8"
        client.vm.hostname = __client1
        client.vm.network :private_network, ip: client1_ip
        client.vm.provider "virtualbox" do |vb|
            vb.name = __client1
            vb.gui = false
            vb.cpus = 1
            vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
            vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
            vb.customize ['modifyvm', :id, '--audio', 'none']
            vb.memory = "512"
        end
		client.vm.provision "shell", inline: client_script
    end

end

